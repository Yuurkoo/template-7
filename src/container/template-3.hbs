
        <header class="header ">
            <a href="#test">
                 {{> logo}}
            </a>
            <nav class="header_nav ">
              <div class="header_nav_right">
                {{> nav list=header}}
              </div>
            </nav>
        </header>
      

      {{#with hero}}
      <div class="hero_container">
      <div class="hero">
        <div class="hero_content">
          <h1 class="hero_title">{{title}}</h1>
          <p class="hero_text">{{text}}</p>
        </div>
        <div class="hero_slider">
          <div class="hero_slider_icon hero_slider_leff">{{left}}</div>
        <img src="{{photo}}" alt="hero img" class="hero_image">
        <div class="hero_slider_icon hero_slider_right">{{right}}</div>
        </div>
      </div>
      </div>
      {{/with}}


      <main class="blog">
        {{#each blog}}
          {{>cardBlog data=this}}
        {{/each}}
      </main>

      <div class="form">
        {{#with form}}
        <div class="form_content">
          <h3 class="form_title">{{title}}</h3>
          <p class="form_info">{{info}}</p>
        </div>
        <div class="form_action">
          <a href="{{href}}" class=" form_button">{{button}}</a>
        </div>
        {{/with}}
      </div>
   

      <footer class="page_block">  
        <div class="footer" id="test">
            <div class="">
               {{> logo}}
               <span class="footer_copyright">Copyright 2023-2024</span>
            </div>

            {{#each footer}}
            <div class="">
                <span class="footer_title">{{title}}</span>
                {{> nav list=links isVertical=true}}
            </div>
            {{/each}}
        </div>
       </footer>
